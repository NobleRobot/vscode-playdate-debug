{
  "name": "playdate-debug",
  "displayName": "Playdate Debug",
  "version": "0.2.3",
  "publisher": "midouest",
  "description": "Unofficial Playdate debug extension",
  "license": "MIT",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/midouest/vscode-playdate-debug.git"
  },
  "bugs": {
    "url": "https://github.com/midouest/vscode-playdate-debug/issues"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/extension.js",
    "watch": "npm run -S esbuild-base -- --sourcemap --sources-content=false --watch",
    "build": "npm run -S esbuild-base -- --sourcemap --sources-content=false",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish-pre-release": "vsce publish --pre-release",
    "vscode:prepublish": "rimraf dist && npm run -S esbuild-base -- --minify",
    "test": "npm run typecheck"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vscode/debugadapter": "^1.55.0-pre.1",
    "@vscode/debugadapter-testsupport": "^1.55.0-pre.1",
    "await-notify": "1.0.1",
    "base64-js": "^1.5.1",
    "esbuild": "^0.14.21",
    "eslint": "^8.9.0",
    "events": "^3.3.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.0",
    "path-browserify": "^1.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5",
    "url": "^0.11.0",
    "vsce": "^2.6.7"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:workbench.action.tasks.runTask",
    "onDebugResolve:playdate"
  ],
  "workspaceTrust": {
    "request": "never"
  },
  "contributes": {
    "configuration": {
      "title": "Playdate Debug",
      "properties": {
        "playdate-debug.sdkPath": {
          "type": "string",
          "description": "Path to the Playdate SDK. By default, the extension will use the PLAYDATE_SDK_PATH environment variable to find the Playdate SDK."
        },
        "playdate-debug.sourcePath": {
          "type": "string",
          "description": "Path to the game's source directory. By default, the extension will use the `source` folder in the workspace root directory as the source path."
        },
        "playdate-debug.outputPath": {
          "type": "string",
          "description": "Output directory for the compiled game bundle. By default, the extension will use the workspace root folder as the output path."
        },
        "playdate-debug.productName": {
          "type": "string",
          "description": "Compiled game bundle name without the .pdx extension. By default, the extension will use the value of the `name` field in the game's `pdxinfo` file."
        }
      }
    },
    "breakpoints": [
      {
        "language": "lua"
      }
    ],
    "taskDefinitions": [
      {
        "type": "pdc",
        "properties": {
          "timeout": {
            "type": "number",
            "description": "Milliseconds to wait after `pdc` completes before exiting the task."
          }
        }
      },
      {
        "type": "playdate-simulator",
        "properties": {
          "timeout": {
            "type": "number",
            "description": "Milliseconds to wait after the Playdate Simulator opens before exiting the task."
          },
          "openGame": {
            "type": "boolean",
            "description": "True if the simulator executable should launch with the game open. Defaults to true.",
            "default": true
          }
        }
      }
    ],
    "problemMatchers": [
      {
        "name": "pdc-lua",
        "owner": "lua",
        "pattern": {
          "regexp": "^(warning|error):\\s+(.*):(\\d+):\\s+(.*)$",
          "severity": 1,
          "file": 2,
          "line": 3,
          "message": 4
        }
      },
      {
        "name": "pdc-external",
        "owner": "external",
        "pattern": {
          "regexp": "^(error):\\s+(.*)$",
          "severity": 1,
          "message": 2
        }
      }
    ],
    "debuggers": [
      {
        "type": "playdate",
        "languages": [
          "lua"
        ],
        "label": "Playdate Debug",
        "configurationAttributes": {
          "launch": {
            "properties": {}
          }
        },
        "initialConfigurations": [
          {
            "type": "playdate",
            "request": "launch",
            "name": "Debug (Simulator)"
          }
        ],
        "configurationSnippets": [
          {
            "label": "Playdate Debug: Launch",
            "description": "Launch the game in the Playdate Simulator",
            "body": {
              "type": "playdate",
              "request": "launch",
              "name": "Debug (Simulator)"
            }
          }
        ]
      }
    ]
  }
}
